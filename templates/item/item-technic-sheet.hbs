<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
      <div class="grid grid-1col">
        <div class="resource">
          <label class="resource-label">{{localize "Class"}}</label>
          <select value="{{system.class.value}}" class="select-field" name="system.class.value">
            {{#select system.class.value}}
            {{#each system.classes as |class name|}}
            <option value="{{name}}">{{class.label}}</option>
            {{/each}}
            {{/select}}
          </select>
        </div>
      </div>
    </div>
  </header>
  <section class="sheet-body item-body">
    {{!-- Description Tab --}}
    <div class="description-header flex-group-center">
      <h3 class="description-name">{{localize "Description"}}</h3>
    </div>
    <div>
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner
      editable=editable}}
    </div>
  </section>
</form>