<label for="system.combat" class="resource-box-label">{{localize "Combat"}}</label>
<div class="resource-box">

    <details id="combat.attack" {{#openDetails "combat.attack" }}{{/openDetails}}>
        <summary class="resource-field summary">
            <label for="system.combat.attack" class="resource-label rollable" data-roll="1d10x10+@combat.attack"
                data-label="{{localize 'Attack Capacity'}}"><i class="fa-solid fa-dice-d10"
                    data-label="{{localize 'Attack Capacity'}}"></i> {{localize "Attack Capacity"}}</label>
            <label type="number" name="system.combat.attack"
                value="{{system.combat.attack}}">{{system.combat.attack}}</label>
        </summary>
        <div class="resource-field">
            <label for="system.abilities.dex.mod" class="resource-label">{{system.abilities.dex.label}}</label>
            <label type="number" name="system.abilities.dex.mod"
                value="{{system.abilities.dex.mod}}">{{system.abilities.dex.mod}}</label>
        </div>
        <div class="resource-field">
            <label for="system.combat.classAttack" class="resource-label">{{localize "Class"}}</label>
            <label type="number" name="system.combat.classAttack"
                value="{{system.combat.classAttack}}">{{system.combat.classAttack}}</label>
        </div>
        <div class="resource-field">
            <label for="system.combat.othersAttack" class="resource-label">{{localize "Others"}}</label>
            <input type="number" name="system.combat.othersAttack" value="{{system.combat.othersAttack}}"
                data-dtype="Number" />
        </div>
    </details>

    <hr>

    <details id="combat.defense" {{#openDetails "combat.defense" }}{{/openDetails}}>
        <summary class="resource-field summary">
            <label for="system.combat.defense" class="resource-label rollable" data-roll="1d10x10+@combat.defense"
                data-label="{{localize 'Defense Capacity'}}"><i class="fa-solid fa-dice-d10"
                    data-label="{{localize 'Defense Capacity'}}"></i> {{localize "Defense Capacity"}}</label>
            <label type="number" name="system.combat.defense"
                value="{{system.combat.defense}}">{{system.combat.defense}}</label>
        </summary>
        <div class="resource-field">
            <label for="system.abilities.dex.mod" class="resource-label">{{system.abilities.dex.label}}</label>
            <label type="number" name="system.abilities.dex.mod"
                value="{{system.abilities.dex.mod}}">{{system.abilities.dex.mod}}</label>
        </div>
        <div class="resource-field">
            <label for="system.combat.classDefense" class="resource-label">{{localize "Class"}}</label>
            <label type="number" name="system.combat.classDefense"
                value="{{system.combat.classDefense}}">{{system.combat.classDefense}}</label>
        </div>
        <div class="resource-field">
            <label for="system.combat.othersDefense" class="resource-label">{{localize "Others"}}</label>
            <input type="number" name="system.combat.othersDefense" value="{{system.combat.othersDefense}}"
                data-dtype="Number" />
        </div>
    </details>

</div>