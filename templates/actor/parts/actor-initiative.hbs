<label for="system.initiative" class="resource-box-label">{{localize "Initiative"}}</label>
<div class="resource-box">
    <details id="initiative" {{#openDetails "initiative" }}{{/openDetails}}>
        <summary class="resource-field summary">
            <label for="system.initiative.value" class="resource-label">{{localize "Value"}}</label>
            <label type="number" name="system.initiative.value"
                value="{{system.initiative.value}}">{{system.initiative.value}}</label>
        </summary>
        <div class="resource-field">
            <label for="system.initiative.mod" class="resource-label">{{system.abilities.dex.label}}</label>
            <label type="number" name="system.initiative.mod"
                value="{{system.abilities.dex.mod}}">{{system.abilities.dex.mod}}</label>
        </div>
        <div class="resource-field">
            <label for="system.initiative.class" class="resource-label">{{localize "Class"}}</label>
            <label type="number" name="system.initiative.class"
                value="{{system.initiative.class}}">{{system.initiative.class}}</label>
        </div>
        <div class="resource-field">
            <label for="system.initiative.weapon" class="resource-label">{{localize "Weapon"}}</label>
            <input type="number" name="system.initiative.weapon" value="{{system.initiative.weapon}}"
                data-dtype="Number" />
        </div>
        <div class="resource-field">
            <label for="system.initiative.armor" class="resource-label">{{localize "Armor"}}</label>
            <input type="number" name="system.initiative.armor" value="{{system.initiative.armor}}"
                data-dtype="Number" />
        </div>
        <div class="resource-field">
            <label for="system.initiative.others" class="resource-label">{{localize "Others"}}</label>
            <input type="number" name="system.initiative.others" value="{{system.initiative.others}}"
                data-dtype="Number" />
        </div>
    </details>
</div>