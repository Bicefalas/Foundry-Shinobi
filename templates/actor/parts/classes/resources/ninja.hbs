<div class="resource-field flexcolumn">
    <label for="system.attributes.chakra" class="resource-label">{{localize
        "Chakra"}}</label>
    <div class="resource-field">
        <div class="resource-field">
            <label for="system.attributes.chakra.value" class="resource-label">{{localize
                "Current"}}</label>
            <input class="class-dependant" type="number" name="system.attributes.chakra.value"
                value="{{system.attributes.chakra.value}}" data-dtype="Number" />
        </div>
        <div class="resource-field">
            <label for="system.attributes.chakra.max" class="resource-label">{{localize
                "Max"}}</label>
            <input class="class-dependant" type="number" name="system.attributes.chakra.max"
                value="{{system.attributes.chakra.max}}" data-dtype="Number" />
        </div>
    </div>
</div>